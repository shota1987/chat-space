.side-bar
  .side-bar__header
    .side-bar__header__box
      %p.side-header__box__user-name
        = current_user.name      
      %ul.side-bar__header__box__menu
        %li.side-bar__header__box__menu__new-group
          = link_to new_group_path do
            = icon('fas', 'edit',class: 'icon')
        %li.side-bar__header__box__menu__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')


  .side-bar__groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group__group-name
            = group.name
        %p.group__latest-message
          = group.show_last_message