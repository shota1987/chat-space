.side-bar
  .side-bar__header
    .side-bar__header__box
      %p.side-header__box__user-name
        = current_user.name      
      %ul.side-bar__header__box__menu
        %li.side-header__box__edit-user
          = link_to "#" do
            = icon('fas', 'edit')
        %li.side-header__box__new-group
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')


  .side-bar__groups
    .group
      = link_to "#" do
        %p.group__group-name
          グループ
        %p.group__latest-message
          noメッセージ